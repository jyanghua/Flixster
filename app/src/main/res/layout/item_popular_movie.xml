<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E0E0E">

        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="#2C2C2C"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPosterPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="58dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/ivPosterPopular"
                    android:layout_alignStart="@+id/ivPosterPopular"
                    android:layout_alignTop="@+id/ivPosterPopular"
                    android:layout_alignBottom="@+id/ivPosterPopular"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivPlay"
                        android:layout_width="71dp"
                        android:layout_height="84dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="40dp"
                        app:srcCompat="@drawable/yt_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvTitlePopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivPosterPopular"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto"
                    android:text="TextView"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    tools:text="Sonic the Hedgehog" />

                <TextView
                    android:id="@+id/tvOverviewPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitlePopular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:maxLines="6"
                    android:text="TextView"
                    android:textColor="@color/textColor"
                    tools:text="Based on the global blockbuster videogame franchise from Sega, Sonic the Hedgehog tells the story of the worldâ€™s speediest hedgehog as he embraces his new home on Earth. In this live-action adventure comedy, Sonic and his new best friend team up to defend the planet from the evil genius Dr. Robotnik and his plans for world domination." />



            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>